<% content_for :title do %>Log in | <% end %>

<h1>Log in</h1>
<p>Please log in with your cluster username and password to access the storage manager.</p>

<%= form_tag({controller: "login", action: "authenticate"}, method: "post", class: "form-horizontal") do %>
<div class="form-group">
  <%= label_tag(:username, "Username:", class: "control-label col-sm-4") %>
  <div class="col-sm-4">
  <%= text_field_tag(:username, @user, class: "form-control") %>
  </div>
</div>
<div class="form-group">
  <%= label_tag(:password, "Password:", class: "control-label col-sm-4") %>
  <div class="col-sm-4">
  <%= password_field_tag(:password, "", class: "form-control") %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-4 col-sm-4">
  <%= submit_tag("Log in", class: "btn btn-default") %>
  </div>
</div>
<% end %>