      },
      height: $(window).height() - $('#elfinder').position().top - 30,
      ui: ['toolbar', 'tree', 'path', 'stat'],
      uiOptions: {
        toolbar: [
          ['back', 'forward'],
          ['reload'],
          ['home', 'up'],
          ['mkdir', 'mkfile'],
          ['upload', 'download', 'open'],
          ['info', 'quicklook', 'submit'],
          ['duplicate', 'copy', 'cut', 'paste'],
          ['rename', 'rm', 'edit'],
          ['extract', 'archive'],
          ['view','sort'],
          ['help']
