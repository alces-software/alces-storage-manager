<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#elfinder').elfinder({
      contextmenu: {
        navbar: ['open', '|', 'duplicate', 'copy', 'cut', 'paste', '|', 'rm', '|', 'info'],
        cwd: ['reload', 'back', '|', 'mkdir', 'mkfile', 'paste', '|', 'sort', '|', 'info'],
